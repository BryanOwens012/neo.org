@section Scripts{
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
        function showPlatform(obj, name)
        {
            if (name) {
                $('.client-ul li').hide();
                $('.' + name).show();
            }
            else
                $('.client-ul li').show();
            $('.nav-client li').removeClass("selected");
            $(obj).addClass("selected");
        }
        function zoomin(obj)
        {
            var img = $(obj).parent().find("img");
            var name = $(obj).parent().find("header");
            var developer = $(obj).parent().find(".developer");
            var desc = $(obj).parent().find(".desc");
            var link = $(obj).parent().find(".link");
            $("#modal").modal();

            $("#model_img").html("");
            $("#model_name").html("");
            $("#model_dev").html("");
            $("#model_desc").html("");
            $("#model_link").html("");

            $("#model_img").attr("src", img.attr("src"));
            $("#model_name").html(name.html());
            $("#model_dev").html(developer.html());
            $("#model_desc").html(desc.html());
            $("#model_link").html(link.html());
        }
        $("#menu_list a").css("border-bottom", "none")
        $("#menu_list li.nav-item [href='/client']").css("border-bottom", "2px solid #58bf00")
    </script>
}